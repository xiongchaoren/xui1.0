/* pages/toast/index.wxss */
.x-toast{
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate3d(-50%,-50%,0);
  padding: 10px 15px;
  background-color: rgba(0,0,0,0.7);
  color:#fff;
  font-size: #fff;
  line-height: 1.7;
  box-sizing: border-box;
  z-index: 300;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 4px;
}

.x-toast__icon{
  width: 40px;
  height: 40px;
  line-height: 40px;
  padding: 10px 15px;
  text-align: center;
  font-size: 30px;
}

.x-toast__icon-loading .x-loading{
  width:40px;
  height:40px;
  margin:0;
}

.x-toast__icon-image{
  background-image: url('https://b.yzcdn.cn/v2/image/dashboard/secured_transaction/suc_green@2x.png');
  background-position: center;
  background-size: 40px 40px;
  background-repeat: no-repeat;
}

.x-toast-mask{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0,0,0,.7);
  opacity: 0;
  z-index: 200;
}