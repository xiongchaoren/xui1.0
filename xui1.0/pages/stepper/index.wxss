/* pages/stepper/index.wxss */
.x-stepper{
  display: inline-flex;
  display: -webkit-inline-flex;
  vertical-align: middle;
  color: #666;
  align-items: center;
  justify-content: center;
  height: 30px;
  line-height: 30px;
}
.x-stepper__item{
  display: inline-block;
  flex: 1;
  min-width: 40px;
  text-align: center;
  align-self: stretch;
  border: 1px solid;
}
.x-stepper__text{
  height: 100%;
  border: 1px solid;
  text-align: center;
  max-width: 60px;
  box-sizing:border-box;
}
.x-stepper__item,
.x-stepper__text{
  border-color: #999;
  font-size: 16px;
}

.x-stepper__item-minus{
  border-right: none;
}
.x-stepper__item-plus{
  border-left: none;
}
 .x-stepper__item.x-stepper__disabled{
  background:#f8f8f8;
  color:#bbb;
  border-color:#e8e8e8;
} 

