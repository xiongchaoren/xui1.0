/* 按钮 */
.x-btn {
  position: relative;
  display: block;
  padding-left: 15px;
  padding-right: 15px;
  font-size: 16px;
  line-height: 40px;
  height: 40px;
  border-radius: 0;
  color: #000;
  background-color: inherit;
  box-sizing: border-box;
  -webkit-tap-highlight-color:transparent;
  overflow: hidden;
  text-align: center;
}
.x-btn:after,
.x-btn:before {
  display: none;
}
.x-btn-hover:after {
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.1);
  opacity: 0.7;
  z-index: 2;
}

.x-btn__primary {
  color: #fff;
  background-color: #4b0;
}
.x-btn__danger {
  color: #fff;
  background-color: #f44;
}
.x-btn__warn {
  color: #fff;
  background-color: #f85;
}

.x-btn__border {
  border: 1px solid #000;
  border-radius: 5px;
}

.x-btn__primary.x-btn__border {
  border-color: #4b0;
}
.x-btn__danger.x-btn__border {
  border-color: #f44;
}
.x-btn__warn.x-btn__border {
  border-color: #f85;
}

.x-btn__primary.x-btn-empty {
  color: #4b0;
  border-color: #4b0;
  background-color: #fff;
}
.x-btn__danger.x-btn-empty {
  color: #f44;
  border-color: #f44;
  background-color: #fff;
}
.x-btn__warn.x-btn-empty {
  color: #f85;
  border-color: #f85;
  background-color: #fff;
}

.x-btn__inline {
  display: inline-block;
}

